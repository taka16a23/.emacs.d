>>> import re
>>> import datetime
>>> from datetime import date
>>> d = date(2000, 1, 1)
>>> isinstance(d, date)
True

>>> isinstance(d, (date, re))
True

>>> isinstance(1, numbers.Number)
True

>>> long_ = 100000000000000000000000000000000
>>> isinstance(long, numbers.Number)
False

>>> isinstance(100000000000000000000, numbers.Number)
True

>>> isinstance(1.0, numbers.Number)
True