(eval-when-compile
  (require 'use-package "use-package" 'noerror)
  (declare-function package-bundle "package-setup.el")
  )

;; (require 'package-setup "package-setup" 'noerr)
;; (declare-function package-bundle "package-setup.el")
(ignore-errors (package-bundle 'auto-install))
;; (declare-function package-installed-p "package")
;; (when (require 'package-setup "package-setup" 'noerr)
  ;; (ignore-errors (package-bundle 'auto-install)))

(use-package auto-install
  ;; :disabled
  :defer
  :commands (auto-install-compatibility-setup)
  :init
  :config
  (message "Loading \"auto-install\"")
  (require 'auto-install-ext "auto-install-ext" 'noerr)
  (custom-set-variables
   '(auto-install-directory
     (or (and (require 'environment-setup "environment-setup" 'noerr)
              (my-inits-dir-get))
         auto-install-variables))
   '(auto-install-replace-confirm t))
  (auto-install-compatibility-setup)
  (require 'bind-key "bind-key" 'noerr)
  (bind-keys :map auto-install-minor-mode-map
             ("C-c C-c" . auto-install-save&erase))
  )



(provide 'auto-install-setup)
