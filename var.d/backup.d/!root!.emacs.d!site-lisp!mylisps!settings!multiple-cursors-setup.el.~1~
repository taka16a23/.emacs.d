(eval-when-compile
  (require 'use-package "use-package" 'noerr)
  (require 'multiple-cursor "multiple-cursor" 'noerr)
  )

(defun mc/next-line ()
  "For multiple-cursors `next-line'."
  (interactive)
  (next-line))

(defun mc/previous-line ()
  "For multiple-cursors `previous-line'."
  (interactive)
  (previous-line))

(defun mc/forward-char ()
  "For multiple-cursors `forward-char'."
  (interactive)
  (forward-char))

(defun mc/backward-char ()
  "For multiple-cursors `backward-char'."
  (interactive)
  (backward-char))

(use-package multiple-cursors
  ;; :disabled
  :defer
  :commands
  (mc/add-cursor-on-click
   mc/edit-lines
   mc/mark-next-like-this
   mc/mark-previous-like-this)
  :init
  (setq mc/list-file (my-data-dir-join "multi-cursor-list.el"))
  (global-set-key (kbd "M-<mouse-1>") 'mc/add-cursor-on-click)
  (global-set-key (kbd "s-s") 'mc/edit-lines)
  (global-set-key "\M-@" 'mc/mark-next-like-this)
  (global-set-key "\M-`" 'mc/mark-previous-like-this)
  :config
  (message "Loading \"multiple-cursors\"")
  (dolist (elt '(mc/next-line
                 mc/previous-line
                 mc/forward-char
                 mc/backward-char))
    (add-to-list 'mc/cmds-to-run-once elt))
  )



(provide 'multiple-cursors-setup)
;; For Emacs
;; Local Variables:
;; coding: utf-8
;; End:
;;; multiple-cursors-setup.el ends here


